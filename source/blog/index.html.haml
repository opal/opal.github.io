.container.col-sm-8
  .blog-posts
    = partial 'blog_title'
    - blog.articles.each do |article|
      - body_parts = article.body.split('<!--preview-->')
      - body_preview = body_parts.first
      - if body_parts.size > 1
        - body_preview += link_to("continue readingâ€¦", article.url)
      = partial 'post', locals: {article: article.data.merge(url: article.url, title: article.title, body: body_preview)}

